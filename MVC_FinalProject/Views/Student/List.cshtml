@model IEnumerable<MVC_FinalProject.Models.Student>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Fluent;
@{
    ViewData["Title"] = "List";
    var pageList = (IPagedList)ViewBag.userModel;
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td class=" text-muted" colspan="5">
                第@(pageList.PageCount < pageList.PageNumber ? 0 : pageList.PageNumber)頁，共 @pageList.PageCount 頁，
                每頁 @pageList.PageSize 筆資料，全部共有 @pageList.TotalItemCount 筆資料。
            </td>
        </tr>
    </tfoot>
</table>
<div style="align-content:center">
    @(Html.Pager(pageList)
        .Url(page => Url.Action("List", new { page }))
        .Build())
</div>
<div>  <a asp-action="Index2">← 上一頁</a></div>
@section topCSS
{
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

    <style>
        table caption {
            caption-side: top;
            color: white;
            background-color: black;
            text-align: center;
        }

        /*設定thead顏色*/
        .table > thead > tr {
            color: white;
            background-color: #3176b1;
        }

        /*設定tfoot顏色及文字對齊*/
        .table > tfoot > tr {
            background-color: lightgreen;
            font-size: medium;
        }

        /*設定文字對齊*/
        .table > thead > tr > th, .table > tfoot > tr {
            text-align: center;
        }
    </style>
}