
@{
    ViewData["Title"] = "Index2";
}

@if (TempData["CreateSuccessMessage"] != null)
{
    <script>alert('@TempData["CreateSuccessMessage"]');</script>
}

<div class="HomePage">
    <div class="container">
        <h1>學生資料系統首頁</h1>


        @if (@TempData["LoginAdminmsg"] != null)
        {
            <div class="alert alert-success">@TempData["LoginAdminmsg"]</div>
        }

        <div class="button-group">
            <a class="nav-button" href="@Url.Action("Create", "Student")">新增學生</a>
            <a class="nav-button" href="@Url.Action("List", "Student")">學生清單</a>
            <a class="nav-button" href="@Url.Action("InputQuery", "Student")">查詢</a>
            <a class="nav-button" href="@Url.Action("Index", "Course")">選課課程</a>
            <a class="nav-button" href="@Url.Action("Create","Course")">新增課程</a>
        </div>
    </div>
</div>


<style>
    homepage {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f3f4f6;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .container {
        background: white;
        padding: 30px 40px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h1 {
        margin-bottom: 10px;
        color: #333;
    }

    .button-group {
        margin-top: 20px;
    }

    .nav-button {
        display: inline-block;
        padding: 10px 20px;
        margin: 10px;
        border-radius: 8px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .nav-button:hover {
            background-color: #0056b3;
        }
</style>
