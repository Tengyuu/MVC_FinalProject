@model IEnumerable<MVC_FinalProject.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>課程</h1>
@if(TempData["Editmsg"] != null){
    <div class="alert alert-success">
        @TempData["Editmsg"]
    </div>
}

<p>
    @* asp-controller="Student" 若要連接到Student Controller下的某某Action*@
    @*     href="@Url.Action("Create", "Student")" *@
    <a  asp-action="Create">新增課程</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-info">Edit</a>
                <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-primary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
